<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Log in to your account</h2>

          <%= form_for(:session, :html =>{ class: "form horizontal", role: "form"}, url: login_path)do |f| %>
                <div class="form-outline mb-4">
                  <%= f.label :username, class: "form-label", for: "form3Example1cg" %><br>
                  <%= f.text_field :username, class: "form-control form-contol-lg",id: "form3Example1cg",placeholder: "enter your username" %>
                </div>
                <div class="form-outline mb-4">
                  <%= f.label :password, class: "form-label", for: "form3Example1cg" %><br>
                  <%= f.password_field :password, class: "form-control form-contol-lg",id: "form3Example1cg",placeholder: "enter your password" %>
                </div>

                <div class="d-flex justify-content-center">
                  <%= f.submit "Login", class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Don't have an account? <a href="/signup" class="fw-bold text-body"><u>Sign up here</u></a></p>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>