 <% if logged_in? %>
  <div class="container">
    <button class="navbar-toggler" type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse"
      id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
         <%= link_to "Chatroom" , root_path, class: "nav-link " %>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Messages</a>
        </li>
      </ul>
      <ul class="navbar-nav">
      <%= button_to "Logout" , logout_path, method: :delete, class: "btn btn-danger btn-lg" %>
      </ul>
    </div>
  </div>
  <% else %>
    <div class="container">
      <button class="navbar-toggler" type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse"
        id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Chatroom</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Messages</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown me-2">
            <a class="nav-link dropdown-toggle" href="#" role="button"
              data-bs-toggle="dropdown" aria-expanded="false">
              Acount
            </a>
            <ul class="dropdown-menu">
              <li> <%= link_to "login" , login_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "signup" , signup_path, class: "dropdown-item" %></li>

            </ul>
          </li>

        <%= link_to "Signup" , "/signup", class: "btn btn-primary btn-lg" %> 
        </ul>
      </div>
    </div>
    <%end%>